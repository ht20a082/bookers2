<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		<%= form_with model: @book, url: update_book_path(@book.id), method: :patch  do |f| %>

        <p>Title</p>
        <%= f.text_field :title %>

        <p>Body</p>
        <%= f.text_area :body %>
        <div>
        <%= f.submit 'Update Book' %>
        </div>

        <%= link_to "Show", book_path(@book.id) %>
        <span> | </span>
        <%= link_to "Back", '/books' %>

      <% end %>
    </div>
  </div>
</div>