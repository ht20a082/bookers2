<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% @books.each do |book| %>
      <p><%= image_tag book.user.get_profile_image(100,100) %></p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
              <%= book.user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= book.user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "edit", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-8 offset-md-1"></div>
</div>